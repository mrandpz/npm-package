{
  "name": "npm-package",
  "version": "1.0.0",
  "description": "A npm package build for own learn",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "rimraf .docz && docz dev",
    "build": "docz build && webpack",
    "lint-staged": "lint-staged",
    "lint:ts": "tslint -c tslint.json 'components/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrandpz/npm-package.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrandpz/npm-package/issues"
  },
  "homepage": "https://github.com/mrandpz/npm-package#readme",
  "dependencies": {
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
    "stylelint-order": "^3.0.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "babel-plugin-import": "^1.12.0",
    "docz": "^1.2.0",
    "docz-plugin-css": "^0.11.0",
    "docz-theme-default": "^1.2.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "gulp-watch": "^5.0.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "merge-stream": "^2.0.0",
    "react-hot-loader": "^4.11.1",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,scss}": [
      "prettier --write",
      "git add"
